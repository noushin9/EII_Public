<mvc:View
    controllerName="capmcpserver.customers.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page
        id="page"
        title="{i18n>title}"
        showNavButton="false">
        <content>
            <Table
                id="customersTable"
                inset="false"
                items="{
                    path: '/Customers',
                    sorter: {
                        path: 'Name'
                    }
                }"
                mode="SingleSelectMaster"
                selectionChange=".onSelectionChange">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>customersTableTitle}" level="H2"/>
                        <ToolbarSpacer />
                        <Button
                            id="createButton"
                            text="{i18n>createButtonText}"
                            press=".onCreatePress"
                            type="Emphasized"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="{i18n>customerID}" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true">
                        <Text text="{i18n>name}" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true">
                        <Text text="{i18n>email}" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true">
                        <Text text="{i18n>phone}" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="End">
                        <Text text="{i18n>address}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier
                                title="{CustomerID}" />
                            <Text text="{Name}" />
                            <Text text="{Email}" />
                            <Text text="{Phone}" />
                            <Text text="{Address}" />
                            <Text text="{ID}" visible="false" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
